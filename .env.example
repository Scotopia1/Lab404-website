# LAB404 E-commerce Platform Environment Variables
# Copy this file to .env.local and fill in your actual values
# ⚠️ NEVER commit the .env.local file to version control!

# Database Configuration (Optional - only needed for direct DB access)
VITE_DATABASE_URL=postgresql://username:password@host:port/database

# Supabase Configuration (Legacy - for backward compatibility)
VITE_SUPABASE_URL=https://your-project.supabase.co
VITE_SUPABASE_ANON_KEY=your-supabase-anon-key

# WhatsApp Integration
VITE_WHATSAPP_PHONE_NUMBER=+961XXXXXXXX
VITE_WHATSAPP_BUSINESS_NAME=LAB404 Electronics

# Admin Configuration
VITE_ADMIN_EMAIL=admin@yourdomain.com
VITE_ADMIN_PASSWORD=your-very-secure-admin-password

# Company Information
VITE_COMPANY_NAME=LAB404 Electronics
VITE_COMPANY_ADDRESS=Your Business Address
VITE_COMPANY_CITY=Beirut
VITE_COMPANY_COUNTRY=Lebanon
VITE_COMPANY_PHONE=+961XXXXXXXX
VITE_COMPANY_EMAIL=info@yourdomain.com
VITE_COMPANY_WEBSITE=https://yourdomain.com

# Feature Flags
VITE_ENABLE_ADMIN_PANEL=true
VITE_ENABLE_WHATSAPP=true
VITE_ENABLE_CONTACT_FORM=true
VITE_ENABLE_ALIBABA_IMPORT=true
VITE_ENABLE_SEARCH=true
VITE_ENABLE_MOCK_DATA=false

# Development Settings
VITE_DEV_MODE=false
VITE_API_BASE_URL=https://api.yourdomain.com/api

# External Services (Optional)
VITE_CDN_URL=https://cdn.yourdomain.com
VITE_IMAGE_UPLOAD_URL=https://images.yourdomain.com
VITE_GA_TRACKING_ID=GA-XXXXXXXX-X
VITE_FACEBOOK_PIXEL_ID=your-facebook-pixel-id

# Alibaba Integration (Optional)
VITE_ALIBABA_API_KEY=your-alibaba-api-key
VITE_ALIBABA_API_URL=https://api.alibaba.com/v1

# Analytics (Optional)
VITE_MIXPANEL_TOKEN=your-mixpanel-token

# Error Tracking (Optional)
VITE_SENTRY_DSN=your-sentry-dsn

# Security Notes:
# - Never commit .env.local files to version control
# - Use strong, unique passwords for admin accounts
# - Keep API keys secure and rotate them regularly
# - Use environment-specific configurations for production